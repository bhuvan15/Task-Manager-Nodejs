<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="script.js" defer></script>
</head>

<body>
    <div class="container">
        <!-- Heading -->
        <div class="heading">
            <h1>To-Do App</h1>
        </div>
        <!-- Input tasks -->
        <form action="/add_task" method="post">

            <div class="description">
                <div class="des_text text">
                    Description
                </div>
                <input type="text" placeholder="What do you want to do?" id="description_input" name="task"
                    required />
            </div>
            <div class="options">
                <div class="category">
                    <div class="cat_text text">
                        Select Category
                    </div>
                    <select name="category" id="category">
                        <option value="Work">Work</option>
                        <option value="School">School</option>
                        <option value="Personal">Personal</option>
                        <option value="Health">Health</option>
                        <option value="Cleaning">Cleaning</option>
                    </select>
                </div>
                <div class="date">
                    <div class="date_text text">
                        Due Date
                    </div>
                    <input type="date" name="date" id="date" required />
                </div>
            </div>

            <div class="buttons">
                <div class="icon">
                    <i class="fa-solid fa-plus"></i>
                </div>
                <input type="submit" value="Add Task" id="input_btn">
            </div>
        </form>


        <!-- Tasks -->
        <div class="tasks">
            <% for(let i of tasks) {%>
            <div class="task">
                <div class="left">
                    <!-- Task info -->
                    <div class="task_info">
                        <i class="fa-solid fa-caret-right"></i>
                        <%= i.task %>
                    </div>

                    <div class="date_display">
                        <!-- Icon -->
                        <i class="fa-solid fa-calendar"></i>
                        <!-- data -->
                        <%= i.date %>
                    </div>
                </div>

                <div class="right">
                    <div class="category_info">
                        <%= i.category %>
                    </div>
                    <div class="deleteBtn">
                       <a href="/delete_task/?id=<%= i.id%>"><i class="fa-solid fa-trash-can"></i></a>
                    </div>
                </div>
                
            </div>
            <%}%>
        </div>

 </div>
</body>

</html>